			ship.move("LEFT");
			}
		}
		else if(keys[1] == true)
		{
			if(ship.getX()>720-ship.getSpeed()){
				ship.setX(-80);
			}
			else{
			ship.move("RIGHT");
			}
		}
		else if(keys[2] == true)
		{
			if(ship.getY()<30+ship.getSpeed()){
				
			}
			else{
			ship.move("UP");
			}
